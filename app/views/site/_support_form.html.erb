
<% show_or_hide = (params[:show_form] == true) ? 'block' : 'none' -%>

<div id="ajaxforms_wrapper" style="display:<%= show_or_hide %>;">
  <div id="ajaxforms_top"></div>
  <div id="ajaxforms">
    <% remote_form_for :support, :url => support_url, :after => 'remoteFormLoading(this)', :html => {:id => 'request_support_form'} do |s| %>
      <table>
        <tr>
          <th class="label"><label>Email:</label></th>
          <td class="value"><%= s.text_field 'email', :class => 'ajax_field', :value => @email_value %></td>
        </tr>
        <tr>
          <th class="label"><label>Problem:</label></th>
          <td class="value"><%= s.select 'problem', SupportRequest::SUPPORT_OPTIONS, {:include_blank => true}, :class => 'ajax_field' %></td>
        </tr>
        <tr>
          <th class="label"><label>Details:</label></th>
          <td class="value"><%= s.text_area 'details', :rows => 5, :class => 'ajax_field' %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div class="value_buts">
              <%= button_to_function 'Cancel', 'this.blur();'+toggle_ajaxsiteform %> <%= submit_tag 'Submit Request' %> 
            </div>
            <div class="value_loads"><span id="form_loading"></span></div>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
